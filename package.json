{
  "name": "webpack-web-app-manifest-plugin",
  "version": "3.0.2",
  "description": "webpack-web-app-manifest-plugin is a webpack plugin that generates a PWA manifest and integrates with the assets JSON generated by assets-webpack-plugin.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tumblr/webpack-web-app-manifest-plugin.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "pwa",
    "webpack",
    "web",
    "app",
    "manifest"
  ],
  "author": "Paul Rehkugler",
  "license": "MIT",
  "dependencies": {
    "md5": "^2.2.1"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "devDependencies": {
    "file-loader": "^6.2.0",
    "jest": "^24.8.0",
    "jest-junit": "^7.0.0",
    "prettier": "^2.3.0",
    "webpack": "^5.0.0"
  },
  "jest": {
    "testMatch": [
      "**/*.tests.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testURL": "http://localhost/",
    "coverageDirectory": "./reports/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "Jest Tests",
    "output": "./reports/jest.xml",
    "usePathForSuiteName": "true"
  }
}
