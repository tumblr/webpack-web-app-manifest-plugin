{
  "name": "webpack-web-app-manifest-plugin",
  "version": "3.0.2",
  "description": "webpack-web-app-manifest-plugin is a webpack plugin that generates a PWA manifest and integrates with the assets JSON generated by assets-webpack-plugin.",
  "main": "index.js",
  "types": "types",
  "scripts": {
    "test": "jest",
    "test-coverage": "jest --coverage",
    "clean": "rimraf .test-output ./types"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tumblr/webpack-web-app-manifest-plugin.git"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "keywords": [
    "pwa",
    "webpack",
    "web",
    "app",
    "manifest"
  ],
  "author": "Paul Rehkugler",
  "license": "MIT",
  "dependencies": {
    "@types/md5": "^2.2.1",
    "md5": "^2.2.1"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^15.12.2",
    "file-loader": "^6.2.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5",
    "webpack": "^5.0.0"
  },
  "jest": {
    "testMatch": [
      "**/*.tests.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testURL": "http://localhost/",
    "coverageDirectory": "./reports/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./reports",
          "outputName": "jest.xml"
        }
      ]
    ]
  }
}
